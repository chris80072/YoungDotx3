<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 青春點點點</title>
    @Html.AntiForgeryToken()
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        li, footer {
            color: #777;
            line-height: 1.8;
            font-weight: bold;
        }
        .sidenav {
            display: block!important;
            position: fixed!important;
            background-color:rgba(0,0,0,0);
            height: 100%;
            width: 300px;
            z-index: 3;
            overflow: auto;
        }
        .li-link {
            padding: 5px 0px 5px 10px;
        }
        .sidenav-container {
            margin-top: 50px;
            padding: 0.01em 16px;
        }
        .sidenav-container a {
            padding: 4px 2px 4px 16px;
        }
    </style>
</head>
<body>
    <nav class="w3-sidenav sidenav" id="sidenav">
        <div class="w3-container sidenav-container">
            <a href="#" onclick="w3_close()" class="w3-hide-large w3-right w3-jumbo " title="close menu">
                <i class="fa fa-remove"></i>
            </a>
        </div>
        <ul>
            <li class="li-link"><a href="@Url.Action("Index", "Home")" onclick="w3_close();"><i class="fa fa-home" aria-hidden="true"></i> 首頁</a></li>
            <li class="li-link"><a href="@Url.Action("Index", "HappyBirthday")" onclick="w3_close();"><i class="fa fa-birthday-cake" aria-hidden="true"></i> 生日快樂</a></li>
            <li class="li-link"><a href="@Url.Action("Index", "MessageWall")" onclick="w3_close();"><i class="fa fa-child" aria-hidden="true"></i> 哈雷路亞</a></li>
            <li class="li-link"><a href="https://www.facebook.com/YoungDotx3/?fref=ts" target="_blank"><i class="fa fa-facebook-official"></i> 臉書粉絲團</a></li>
            <li class="li-link"><a href="http://youngdotsagit.blogspot.tw/" target="_blank"><i class="fa fa-music" aria-hidden="true"></i> 錄音檔</a></li>
            <li class="li-link"><a href="http://hichannel.hinet.net/radio/index.do?id=232" target="_blank"><i class="fa fa-podcast" aria-hidden="true"></i> 線上收聽: 飛碟電台</a></li>
            <li class="li-link"><a href="#" target="_blank"><i class="fa fa-handshake-o" aria-hidden="true"></i> 支持我們</a></li>
            <li class="li-link"><a href="http://marcy.bigcartel.com/" target="_blank"><i class="fa fa-rocket" aria-hidden="true"></i> 限定商品</a></li>
        </ul>
    </nav>

    <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

    <div class="w3-main" style="margin-left:300px">
        @RenderBody()
        @*<footer class="w3-center w3-opacity w3-hover-opacity-off">
            <p class="copyright">Copyright &copy; @DateTime.Now.Year Chris80072 All rights reserved</p>
        </footer>*@
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/base")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function w3_open() {
            document.getElementById("sidenav").style.display = "block";
            document.getElementById("myOverlay").style.display = "block";
        }

        function w3_close() {
            document.getElementById("sidenav").style.display = "none";
            document.getElementById("myOverlay").style.display = "none";
        }
    </script>
</body>
</html>
