<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 青春點點點</title>
    @Html.AntiForgeryToken()
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/reset.css" rel="stylesheet"/>
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        footer {
            color: #777;
            line-height: 1.8;
            font-weight: bold;
        }
        .sidenav {
            display: block !important;
            position: fixed !important;
            background-color: rgba(0, 0, 0, 0);
            height: 100%;
            width: 250px;
            z-index: 3;
            overflow: auto;
        }
        .li-link, .close-nav {
            color: #FFFFFF;
        }
        .li-link {
            padding: 10px 0px 10px 20px;
        }
        .li-link > a {
            font-size: 18px;
        }
        .w3-opennav {
            margin-left: 1em;
        }
        .sidenav-container {
            margin-top: 30%;
            padding: 0.01em 16px;
        }
        .sidenav-container a {
            padding: 4px 2px 4px 16px;
        }
        @@media (max-width: 736px) {
            .sidenav {
                background-color:rgba(0,0,0,0.8);
            }
	    }
	    @@media (max-width: 360px) {
            .sidenav {
                background-color:rgba(0,0,0,0.8);
            }
	    }
    </style>
</head>
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-90665667-1', 'auto');
    ga('send', 'pageview');

</script>
<body>
    <nav id="nav-left" class="w3-sidenav sidenav hidden">
        <div class="w3-container sidenav-container">
            <a href="#" class="w3-hide-large w3-right w3-jumbo close-nav hide-nav" title="close menu">
                <i class="fa fa-remove"></i>
            </a>
        </div>
        <ul>
            <li class="li-link"><a href="@Url.Action("Index", "Home")" onclick="hideNav();"><i class="fa fa-home" aria-hidden="true"></i> 首頁</a></li>
            <li class="li-link"><a href="@Url.Action("Index", "HappyBirthday")" onclick="hideNav();"><i class="fa fa-birthday-cake" aria-hidden="true"></i> 生日快樂</a></li>
            <li class="li-link"><a href="@Url.Action("Index", "MessageWall")" onclick="hideNav();"><i class="fa fa-child" aria-hidden="true"></i> 哈雷路亞</a></li>
            <li class="li-link"><a href="https://www.facebook.com/YoungDotx3/?fref=ts" target="_blank"><i class="fa fa-facebook-official"></i> 臉書粉絲團</a></li>
            <li class="li-link"><a href="http://youngdotsagit.blogspot.tw/" target="_blank"><i class="fa fa-music" aria-hidden="true"></i> 錄音檔</a></li>
            <li class="li-link"><a href="http://hichannel.hinet.net/radio/index.do?id=232" target="_blank"><i class="fa fa-podcast" aria-hidden="true"></i> 線上收聽: 飛碟電台</a></li>
            <li class="li-link"><a href="http://nbabull.wixsite.com/sponsor" target="_blank"><i class="fa fa-handshake-o" aria-hidden="true"></i> 支持我們</a></li>
            <li class="li-link"><a href="http://marcy.bigcartel.com/" target="_blank"><i class="fa fa-rocket" aria-hidden="true"></i> 限定商品</a></li>
        </ul>
    </nav>
    <div class="w3-overlay w3-hide-large w3-animate-opacity hide-nav" style="cursor:pointer" title="close side menu" id="myOverlay"></div>
    <div class="w3-main" style="margin-left: 250px">
        <span id="show-nav" class="w3-opennav w3-hide-large w3-xxlarge w3-hover-text-grey"><i class="fa fa-bars"></i></span>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/base")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            function showNav() {
                $("#nav-left").removeClass("hidden");
                $("#myOverlay").removeClass("hidden");
            }
            function hideNav() {
                $("#nav-left").addClass("hidden");
                $("#myOverlay").addClass("hidden");
            }
            $('#show-nav').on('click', function () {
                showNav();
            });
            $('.hide-nav').on('click', function () {
                hideNav();
            });
            //check mobile device
            function isMobile() {
                if (navigator.userAgent.match(/Android/i)
                || navigator.userAgent.match(/webOS/i)
                || navigator.userAgent.match(/iPhone/i)
                || navigator.userAgent.match(/iPad/i)
                || navigator.userAgent.match(/iPod/i)
                || navigator.userAgent.match(/BlackBerry/i)
                || navigator.userAgent.match(/Windows Phone/i)
                ) {
                    return true;
                }
                else {
                    return false;
                }
            }

            if (!isMobile())
                showNav();
        });
    </script>
</body>
</html>
